<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="5"
        android:gravity="center">

        <ImageButton
            android:id="@+id/chatlist_profile"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"/>

        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/chatlist_ninkname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nickname"
                android:textColor="@color/text_first"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/chatlist_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chat preview"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:paddingEnd="15dp"
            tools:ignore="RtlHardcoded,RtlSymmetry">
            <TextView
                android:id="@+id/chatlist_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/button_fill_selector_round"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"/>
            <TextView
                android:id="@+id/chatlist_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textColor="@color/text_third"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:paddingBottom="10dp">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/chatlist_farm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/chatlist_state"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/radio_button_selector"
            android:text="farm name"
            android:button="@null"
            android:textSize="15sp"
            android:textColor="@color/text_second"
            android:drawableEnd="@drawable/next_vector_image"
            android:paddingStart="15dp"/>

        <TextView
            android:id="@+id/chatlist_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="state"
            android:textSize="15sp"
            android:textColor="@color/text_first"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>