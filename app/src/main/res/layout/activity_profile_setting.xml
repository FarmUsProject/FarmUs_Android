<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.ProfileSettingActivity">

    <ImageButton
        android:id="@+id/my_page_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ff0000"
        android:padding="10dp"
        android:src="@drawable/back_vector_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 수정"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/text_first"
        app:layout_constraintTop_toTopOf="@id/my_page_back_button"
        app:layout_constraintBottom_toBottomOf="@id/my_page_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:layout_width="76dp"
        android:layout_height="80dp"
        android:background="@drawable/gray_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="6"
        android:orientation="vertical"
        android:layout_marginTop="176dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:layout_margin="20dp"
                android:textSize="13sp"
                android:textColor="@color/text_second"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_btn1"
                android:layout_width="267dp"
                android:text="닉네임"
                android:layout_margin="10dp"
                android:textSize="13sp"
                android:textColor="@color/text_first"
                android:padding="12dp"
                android:layout_height="wrap_content"
                android:background="@drawable/search_bar_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="48dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/edit_btn1"
                app:layout_constraintBottom_toBottomOf="@id/edit_btn1"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/radio_button_selector"
                android:layout_marginEnd="12dp"
                android:text="변경"
                android:textSize="13sp"
                android:textColor="@color/text_first"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한줄소개"
                android:layout_margin="20dp"
                android:textSize="13sp"
                android:textColor="@color/text_second"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_btn2"
                android:layout_width="328dp"
                android:text="내용"
                android:layout_margin="10dp"
                android:textSize="13sp"
                android:textColor="@color/text_first"
                android:padding="12dp"
                android:layout_height="wrap_content"
                android:background="@drawable/search_bar_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:layout_margin="20dp"
                android:textSize="13sp"
                android:textColor="@color/text_second"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_btn3"
                android:layout_width="267dp"
                android:text="이메일"
                android:layout_margin="10dp"
                android:textSize="13sp"
                android:textColor="@color/text_first"
                android:padding="12dp"
                android:layout_height="wrap_content"
                android:background="@drawable/search_bar_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="48dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/edit_btn3"
                app:layout_constraintBottom_toBottomOf="@id/edit_btn3"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/radio_button_selector"
                android:layout_marginEnd="12dp"
                android:text="변경"
                android:textSize="13sp"
                android:textColor="@color/text_first"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:layout_margin="20dp"
                android:textSize="13sp"
                android:textColor="@color/text_second"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_btn4"
                android:layout_width="267dp"
                android:text="이름"
                android:layout_margin="10dp"
                android:textSize="13sp"
                android:textColor="@color/text_first"
                android:padding="12dp"
                android:layout_height="wrap_content"
                android:background="@drawable/search_bar_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="48dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/edit_btn4"
                app:layout_constraintBottom_toBottomOf="@id/edit_btn4"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/radio_button_selector"
                android:layout_marginEnd="12dp"
                android:text="변경"
                android:textSize="13sp"
                android:textColor="@color/text_first"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:layout_margin="20dp"
                android:textSize="13sp"
                android:textColor="@color/text_second"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_btn5"
                android:layout_width="267dp"
                android:text="비밀번호"
                android:layout_margin="10dp"
                android:textSize="13sp"
                android:textColor="@color/text_first"
                android:padding="12dp"
                android:layout_height="wrap_content"
                android:background="@drawable/search_bar_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="48dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/edit_btn5"
                app:layout_constraintBottom_toBottomOf="@id/edit_btn5"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/radio_button_selector"
                android:layout_marginEnd="12dp"
                android:text="변경"
                android:textSize="13sp"
                android:textColor="@color/text_first"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴대폰 번호"
                android:layout_margin="20dp"
                android:textSize="13sp"
                android:textColor="@color/text_second"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_btn6"
                android:layout_width="267dp"
                android:text="휴대폰 번호"
                android:layout_margin="10dp"
                android:textSize="13sp"
                android:textColor="@color/text_first"
                android:padding="12dp"
                android:layout_height="wrap_content"
                android:background="@drawable/search_bar_selector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="48dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/edit_btn6"
                app:layout_constraintBottom_toBottomOf="@id/edit_btn6"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/radio_button_selector"
                android:layout_marginEnd="12dp"
                android:text="변경"
                android:textSize="13sp"
                android:textColor="@color/text_first"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>