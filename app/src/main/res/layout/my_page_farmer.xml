<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_page_farmer_constraint1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/my_page_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:padding="10dp"
            android:src="@drawable/back_vector_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/my_page_farmer_constraint1"
        app:layout_constraintStart_toStartOf="parent"
        android:text="농장주가 되기 위해"
        android:textColor="@color/text_first"
        android:textStyle="bold"
        android:textSize="22sp"
        android:paddingTop="50dp"
        android:paddingStart="20dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toStartOf="parent"
        android:text="아래의 동의가 필요합니다"
        android:textColor="@color/text_first"
        android:textStyle="bold"
        android:textSize="22sp"
        android:paddingTop="10dp"
        android:paddingBottom="30dp"
        android:paddingStart="20dp"/>

    <CheckBox
        android:id="@+id/check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모두 동의합니다"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/text_first"
        app:layout_constraintTop_toTopOf="@id/check1"
        app:layout_constraintBottom_toBottomOf="@id/check1"
        app:layout_constraintStart_toEndOf="@id/check1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@id/check2"
        android:background="@color/gray_first"/>

    <CheckBox
        android:id="@+id/check2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/check1"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="25dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[필수] 이용 약관"
        android:textSize="13sp"
        android:textColor="@color/text_second"
        app:layout_constraintTop_toTopOf="@id/check2"
        app:layout_constraintBottom_toBottomOf="@id/check2"
        app:layout_constraintStart_toEndOf="@id/check2"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ff0000"
        android:src="@drawable/next_vector_image"
        app:layout_constraintTop_toTopOf="@id/check2"
        app:layout_constraintBottom_toBottomOf="@id/check2"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingEnd="25dp"/>

    <CheckBox
        android:id="@+id/check3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/check2"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[필수] 개인정보 처리방침"
        android:textSize="13sp"
        android:textColor="@color/text_second"
        app:layout_constraintTop_toTopOf="@id/check3"
        app:layout_constraintBottom_toBottomOf="@id/check3"
        app:layout_constraintStart_toEndOf="@id/check3"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ff0000"
        android:src="@drawable/next_vector_image"
        app:layout_constraintTop_toTopOf="@id/check3"
        app:layout_constraintBottom_toBottomOf="@id/check3"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingEnd="25dp"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="328dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:text="동의하고 시작하기"
        android:textColor="@color/text_third"
        android:textSize="16sp"/>




</androidx.constraintlayout.widget.ConstraintLayout>