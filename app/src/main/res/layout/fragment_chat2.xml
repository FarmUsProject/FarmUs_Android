<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat2_farm_information"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp"
        android:background="@drawable/border_bottom">

        <ImageView
            android:id="@+id/chat2_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/gray_second"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/chat2_farm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="농장 이름"
            android:textColor="@color/text_first"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/chat2_profile"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/chat2_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/chat2_profile"
            app:layout_constraintBottom_toBottomOf="@+id/chat2_profile"
            android:text="희망 대여기간"
            android:textSize="12sp"
            android:paddingStart="10dp"
            android:paddingBottom="4dp"
            android:textColor="@color/text_second"/>
        <ImageButton
            android:id="@+id/chat2_nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_vector_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Button
            android:id="@+id/chat2_detailButton"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="#00ff0000"
            android:text="@string/reservation_detail"
            android:gravity="left"
            android:paddingStart="10dp"
            android:paddingTop="0dp"
            android:textSize="12sp"
            android:textColor="@color/text_third"
            app:layout_constraintStart_toStartOf="@id/chat2_period"
            app:layout_constraintTop_toBottomOf="@id/chat2_period" />
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/chat2_radioButton1"
            android:button="@null"
            android:layout_width="70dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toStartOf="@id/chat2_radioButton2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="13dp"
            android:background="@drawable/radio_button_selector"
            android:text="@string/rental"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@color/text_second"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/chat2_radioButton2"
            android:button="@null"
            android:layout_width="70dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/radio_button_selector"
            android:text="@string/confirmed"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@color/text_second"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat2_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="136dp"
        app:layout_constraintTop_toBottomOf="@+id/chat2_farm_information"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/chat2_recyclerView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:background="@drawable/border_top">
        <ImageButton
            android:id="@+id/chat2_plusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus"
            android:background="#00ff0000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chat2_editText"/>
        <EditText
            android:id="@+id/chat2_editText"
            android:layout_width="290dp"
            android:layout_height="44dp"
            app:layout_constraintTop_toTopOf="@+id/chat2_plusButton"
            app:layout_constraintStart_toEndOf="@+id/chat2_plusButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/chat2_plusButton"
            android:background="@drawable/edittext_background" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/send"
            android:background="#00ff0000"
            app:layout_constraintEnd_toEndOf="@+id/chat2_editText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>