<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.SettingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_page_constraint1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/my_page_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:padding="10dp"
            android:src="@drawable/back_vector_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/text_first"
            app:layout_constraintTop_toTopOf="@id/my_page_back_button"
            app:layout_constraintBottom_toBottomOf="@id/my_page_back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="576dp"
        android:weightSum="5"
        android:orientation="vertical"
        android:paddingTop="1dp"
        app:layout_constraintTop_toBottomOf="@id/my_page_constraint1"
        android:background="@color/gray_second">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/setting_alerm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림 설정"
                android:textStyle="bold"
                android:textColor="@color/text_first"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="20dp"/>
            <TextView
                android:id="@+id/setting_alerm_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용"
                android:textColor="@color/text_second"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/setting_alerm"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingStart="30dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:src="@drawable/next_vector_image"
                app:layout_constraintTop_toTopOf="@id/setting_alerm_content"
                app:layout_constraintBottom_toBottomOf="@id/setting_alerm_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingEnd="25dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/setting_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 설정"
                android:textStyle="bold"
                android:textColor="@color/text_first"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="20dp"/>
            <TextView
                android:id="@+id/setting_user_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용"
                android:textColor="@color/text_second"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/setting_user"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingStart="30dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:src="@drawable/next_vector_image"
                app:layout_constraintTop_toTopOf="@id/setting_user_content"
                app:layout_constraintBottom_toBottomOf="@id/setting_user_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingEnd="25dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/white"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/setting_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타"
                android:textStyle="bold"
                android:textColor="@color/text_first"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/setting_etc"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="56dp"
                android:background="@color/gray_second">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="1dp"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/setting_etc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공지사항"
                        android:textColor="@color/text_second"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:paddingStart="30dp"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00ff0000"
                        android:src="@drawable/next_vector_image"
                        app:layout_constraintTop_toTopOf="@id/setting_etc1"
                        app:layout_constraintBottom_toBottomOf="@id/setting_etc1"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingEnd="25dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="1dp"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/setting_etc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="문의하기"
                        android:textColor="@color/text_second"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:paddingStart="30dp"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00ff0000"
                        android:src="@drawable/next_vector_image"
                        app:layout_constraintTop_toTopOf="@id/setting_etc2"
                        app:layout_constraintBottom_toBottomOf="@id/setting_etc2"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingEnd="25dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="1dp"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/setting_etc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="로그아웃"
                        android:textColor="@color/text_second"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:paddingStart="30dp"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00ff0000"
                        android:src="@drawable/next_vector_image"
                        app:layout_constraintTop_toTopOf="@id/setting_etc3"
                        app:layout_constraintBottom_toBottomOf="@id/setting_etc3"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingEnd="25dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="1dp"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/setting_etc4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="탈퇴하기"
                        android:textColor="@color/text_second"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:paddingStart="30dp"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00ff0000"
                        android:src="@drawable/next_vector_image"
                        app:layout_constraintTop_toTopOf="@id/setting_etc4"
                        app:layout_constraintBottom_toBottomOf="@id/setting_etc4"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingEnd="25dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="1dp"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/setting_etc5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="내용"
                        android:textColor="@color/text_second"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:paddingStart="30dp"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00ff0000"
                        android:src="@drawable/next_vector_image"
                        app:layout_constraintTop_toTopOf="@id/setting_etc5"
                        app:layout_constraintBottom_toBottomOf="@id/setting_etc5"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingEnd="25dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>