<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.account.AccountSettingFragment">

    <include
        layout="@layout/toolbar_with_title"
        android:id="@+id/toolbar"/>

    <TextView
        android:id="@+id/tv_signout"
        style="@style/Body1Reg"
        android:textColor="@color/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_out_kr"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <ImageView
        android:id="@+id/btn_signout"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/next_vector_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <androidx.constraintlayout.helper.widget.Layer
        android:id="@+id/layer_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="17dp"
        app:constraint_referenced_ids="tv_signout, btn_signout"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/divider_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_2"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"/>
    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_2"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@id/tv_signout"/>
    <View
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_2"
        app:layout_constraintTop_toBottomOf="@id/tv_logout"
        android:layout_marginTop="17dp"/>
    <TextView
        android:id="@+id/tv_logout"
        style="@style/Body1Reg"
        android:textColor="@color/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout_kr"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_1"/>

    <ImageView
        android:id="@+id/btn_logout"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/next_vector_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_1"/>

    <androidx.constraintlayout.helper.widget.Layer
        android:id="@+id/layer_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="17dp"
        app:constraint_referenced_ids="tv_logout, btn_logout"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>